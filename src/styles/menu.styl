.menu-main-container
  display flex
  align-items center

  ul
    display flex
    list-style none
  li
    margin 0 $pushMd

  // Responsive
  @media screen and (max-width: 800px)
    display block
    position fixed
    width $mobileMenuWidth
    padding $padMd
    padding-top 60px
    top 0
    right $mobileMenuWidth * -1 - $pad
    transition right .35s ease
    height 100%
    background $colorBg
    box-shadow 1px 1px 3px rgba(0,0,0,0.25)
    z-index 100

    ul
      display block
      padding-left 0

    li
      padding $pad
      border-bottom 1px solid rgba(0,0,0,0.15)

body.mobile-menu-main-visible .menu-main-container
  right 0

#header-main
  .toggle-menu-main
    display none

    @media screen and (max-width: 800px)
      display block